#ifndef __CONFIG_HPP__
#define __CONFIG_HPP__

#cmakedefine DEBUG

#define WINTERMUTE_SERVICE_NAME "org.thesii.Wintermute"
#define WINTERMUTE_VERSION @WINTERMUTE_VERSION@
#define WINTER_PLUGIN_PATH "@WINTER_PLUGIN_INSTALL_DIR@"
#define WINTER_PLUGINSPEC_PATH "@WINTER_PLUGINSPEC_INSTALL_DIR@"


#if @WINTERMUTE_USE_GUI@ == true
#define WINTERMUTE_USING_GUI
#else
#undef WINTERMUTE_USING_GUI
#endif

// Check if Wintermute's built with X11 (GUI) support. (We're targeting UNIX-based systems)
#ifdef WINTERMUTE_USING_GUI
#include <QApplication>
#define WNTR_APPLICATION QApplication
#else
#include <QCoreApplication>
#define WNTR_APPLICATION QCoreApplication
#endif

#endif // __CONFIG_HPP__

