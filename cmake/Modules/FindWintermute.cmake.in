include(FindPackageHandleStandardArgs)
include(WintermuteDefaults)

set(_winty_plugins)

if (Wintermute_FIND_COMPONENTS)
  foreach(component ${Wintermute_FIND_COMPONENTS})
    string( TOLOWER ${component} _COMPONENT )
    list(APPEND _winty_plugins ${_COMPONENT})
  foreach(component ${Wintermute_FIND_COMPONENTS})
endif (Wintermute_FIND_COMPONENTS)

set(WINTERMUTE_VERSION              "@WINTERMUTE_VERSION@")
set(WINTERMUTE_INCLUDE_DIR          "@WINTER_INCLUDE_INSTALL_DIR@")
set(WINTERMUTE_INCLUDE_DIRS         "@WINTERMUTE_INCLUDE_DIRS@")
set(WINTERMUTE_LIBRARIES            "@WINTERMUTE_LIBRARIES@")
set(WINTERMUTE_INCLUDE_DIRS         "@WINTERMUTE_INCLUDE_DIRS@"
                                    "@WINTERMUTE_INCLUDE_DIR@")
set(WINTERMUTE_LIBRARY_DIRS         "@WINTER_LIB_INSTALL_DIR@")
set(WINTERMUTE_COMPILE_FLAGS        "@WINTERMUTE_COMPILE_FLAGS@")
set(WINTERMUTE_COMPILE_DEFINITIONS  "@WINTERMUTE_COMPILE_DEFINITIONS@")
set(WINTER_DEPRECATED_WARNINGS      "@WINTER_DEPRECATED_WARNINGS@")
set(WINTER_CMAKE_DIR                "@WINTER_CMAKE_DIR@")

find_program(WINTERMUTE_EXECUTABLE "wintermute" DOC "The path to the Wintermute executable.")

find_package_handle_standard_args(Wintermute
    REQUIRED_VARS WINTERMUTE_EXECUTABLE
    VERSION_VAR   WINTERMUTE_VERSION)

include(UseWintermute)
